<body>
    <%- include('./includes/navigation.ejs') %>
    <h1>Videos</h1>
    <div class="gallery nu">
        <% for (let video of videos) { %>

        <!-- <div><a href="https://youtu.be/<%= video.video_id %>"><%= video.title %></a></div>
        <time><%= video.date %></time> -->

        <div>
            <div class="thumbnail">
                <a href="https://youtu.be/<%= video.video_id %>">
                    <img loading="lazy" src="<%= video.thumbnail %>" alt=<%= video.title %>>
                </a>
            </div>
            <div class="details">
                <a href="https://youtu.be/<%= video.video_id %>"><%- video.title %></a>
                <time>
                    <%= video.date.toLocaleDateString("en-US", {year: 'numeric', month: 'long', day: 'numeric' }) %>
                </time>
            </div>
        </div>

        <% } %>
    </div>

    <%- include('./includes/end.ejs') %>